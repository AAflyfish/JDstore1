<div class="product-box">
   <div class="container">
     <!--===== 广告图 =====-->
     <section class="intro-box">
       <div class="row">
         <div class="col-md-12">
           <%= image_tag("https://ws4.sinaimg.cn/large/006tKfTcgy1fg97ixun8xj30x90c216f.jpg") %><!-- 图片位置 -->
         </div>
       </div>
     </section>

     <!--===== 商品类型 & 品牌选单 =====-->
     <section class="menu-box">
       <!-- 主要类型 -->
       <div class="row">
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           类型一 <i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：分类 -->
           <ul class="dropdown-menu">
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
           </ul>
         </div>
         <!-- 主要类型 -->
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           类型二 <i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：分类 -->
           <ul class="dropdown-menu">
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
           </ul>
         </div>
         <!-- 主要类型 -->
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           类型三 <i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：分类 -->
           <ul class="dropdown-menu">
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
             <li><a href="#">分类</a></li>
           </ul>
         </div>
         <!-- 品牌 -->
         <div class="dropdown btn-group clearfix">
           <!-- 选单按钮 -->
           <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
           品牌<i class="fa fa-angle-down"></i>
           </button>
           <!-- 选单内容：品牌 -->
           <ul class="dropdown-menu">
             <li><a href="#">品牌</a></li>
             <li><a href="#">品牌</a></li>
             <li><a href="#">品牌</a></li>
           </ul>
         </div>
       </div>
     </section>

     <hr/>

     <!--===== 页面路径 & 排序 =====-->
     <section class="path-sort-box">
       <!--=== 产品页面路径 ===-->
       <div class="left-box">
         <a href="/">Big Show</a>
       </div>
       <!--=== 选单按钮 ===-->
       <div class="right-box">
         <div class="dropdown btn-group clearfix">
           <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
             排序 <span class="caret"></span>
           </button>
           <!-- 选单内容：排序方式 -->
           <ul class="dropdown-menu dropdown-menu-right" selection aria-labelledby="dropdownMenuDivider">
             <li><a href="#">热销度</a></li>
             <li><%= link_to("按照发表时间排序", products_path ) %></li>
             <li><a href="#">价格排序</a></li>

           </ul>
         </div>
       </div>
     </section>

     <hr/>

     <div class="row">
       <% @products.each do |product| %>
         <div class="col-xs-6 col-md-3">
           <%= link_to product_path(product) do %>
             <% if product.image.present? %>
               <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
             <% else %>
               <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
             <% end %>
           <% end %>
           <%= product.title %> ￥ <%= product.price %>
         </div>
       <% end %>

     </div>
   </div>
 </div>
